        <!-- Profile Edit Page -->
        <template id="profile_edit">
            <t t-call="website.layout">
                <div class="container">
                    <div class="col-md-12 mt32">
                        <h2 class="mb32">I am</h2>
                    </div>
                </div>

                <div class="container">
                    <div class="col-md-4">
                        <img src="http://lorempixel.com/1000/500/?1" class="img img-responsive thumbnail"/>
                        <div class="pull-right">
                            <img src="http://lorempixel.com/40/40/" class="img img-circle" width="40" height="40"/>
                            <div class="clearfix"></div>
                            <span class="badge badge-success mt4">Ninja</span>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <form class="form-horizontal">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-md-4 control-label" for="firstname">Name</label>
                                        <div class="col-md-8">
                                            <input name="name" id="firstname" t-att-value="partner.name" type="text" class="form-control" placeholder="Name"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-md-4 control-label" for="gender">Prefix</label>
                                        <div class="col-md-8">
                                            <select name="title" id="gender" class="selectpicker form-control">
