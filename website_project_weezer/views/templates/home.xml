<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="homepage">
            <t t-call="website.layout">
                <!-- START SEARCH FORM -->
                <t t-call="website_project_weezer.mp_minisearch_form"/>
                <!-- END SEARCH FORM -->

                <section class="bg-primary pt64 pb64 text-center">
                    <h1>A title homepage</h1>
                </section>

                
                <div class="bg-info">
                
                    <!-- marketplace listing -->
                    <section class="container">

                        <h3 class="text-center col-md-6 page-header mb8">Our Wants</h3>
                        <h3 class="text-center col-md-6 page-header mb8">Our Offers</h3>
                        
                        <!-- START: Scrollable -->
                        <div class="col-md-12 scrollable page-header pb8">
                            <!-- <div class="scrollbar"><div class="track"><div class="thumb"></div></div></div> -->

                                <div class="viewport" style="height: 690px; overflow: hidden;">
                                    <div class="overview">

                                        <!-- START: Our wants -->
                                        <div class="col-md-6">
                                            <div class="col-md-12">
                                                <t t-foreach="wants" t-as="item">
                                                    <t t-call="website_project_weezer.mp_single_item" />
                                                </t>
                                            </div> 
                                        </div> 
                                        <!-- END: Our wants -->
                                         
                                        <!-- START: Our offers -->
                                        <div class="col-md-6">
                                            <div class="col-md-12">
                                                <t t-foreach="offers" t-as="item">
                                                    <t t-call="website_project_weezer.mp_single_item" />
                                                </t>
                                            </div> 
                                        </div> 
                                        <!-- END: Our offers -->   
                            
                                    </div>
                                </div>
                            </div>
                        <!-- END: Scrollable -->
                    </section>
                    <!-- /marketplace listing -->
                </div>
                
                <section class="container pb32 pt32">
                    <div class="row">
                        <div class="col-md-4">
                            <h4 class="text-center">Diagram</h4>
                            <div id="chart_div"></div>
                        </div>
                        <div class="col-md-4">
                            <t t-if="event">
                                <h4 class="text-center">Our reference</h4>
                                <t t-if="blog_post.background_image">
                                    <img t-att-src="blog_post.background_image" class="center-block img img-responsive thumbnail" style="height: 110px;"/>
                                </t>
                                <p t-esc="format_text(strip_tags(blog_post.content),400)"></p>
                                </t>
                            <!-- <div class="col-md-6 col-md-offset-3">
                                <a href="#" class="btn btn-primary btn-nolink btn-block">See more</a>
                            </div> -->
                        </div>
                        <div class="col-md-4">
                            <t t-if="event">
                                <h4 class="text-center">Last events</h4>
                                <p class="text-danger" t-esc="format_text(strip_tags(event.description),400)"></p>
                            </t>
                        </div>
                    </div>
                </section>

            </t>
        </template>
    </data>
</openerp>