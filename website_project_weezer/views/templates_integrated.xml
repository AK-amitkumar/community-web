<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<template id="layout" name="Weezer Layout" inherit_id="website.layout">
    		<xpath expr="//header" position="replace">
                <t t-if="not hide_header">
        			<header>
